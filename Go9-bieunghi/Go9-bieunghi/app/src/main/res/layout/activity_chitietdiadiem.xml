<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.TrangChu.chitietdiadiem">
    <ScrollView


        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:orientation="vertical">
            <FrameLayout
                android:background="@drawable/suoi_tien"
                android:layout_width="match_parent"
                android:layout_height="300dp">
                <TextView
                    android:id="@+id/ten_dd"
                    android:text=" - Tên địa điểm - "
                    android:textColor="#FFFFFF"
                    android:textSize="15dp"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:layout_width="match_parent"
                    android:layout_height="47dp" />
                <LinearLayout
                    android:layout_marginTop="277dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="20dp">
                    <TextView
                        android:layout_width="200dp"
                        android:layout_height="20dp"
                        android:layout_marginBottom="0dp"
                        android:textColor="#FFFFFF"
                        android:textSize="10dp"
                        android:gravity="center"
                        android:textAlignment="center"
                        android:text="[SL] người đã checkin tại địa điểm này "/>
                </LinearLayout>
            </FrameLayout>

            <FrameLayout
                android:layout_marginTop="0dp"
                android:layout_width="match_parent"
                android:layout_height="200dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp">
                    <ImageButton
                        android:id="@+id/btn_thongtin"
                        android:src="@drawable/info"
                        android:background="#FFFFFF"
                        android:layout_width="90dp"
                        android:layout_height="45dp" />
                    <ImageButton
                        android:id="@+id/phan_hoi"
                        android:src="@drawable/feedback"
                        android:background="#FFFFFF"
                        android:layout_width="90dp"
                        android:layout_height="45dp" />
                    <ImageButton
                        android:id="@+id/vi_tri"
                        android:src="@drawable/sldd"
                        android:background="#FFFFFF"
                        android:layout_width="90dp"
                        android:layout_height="45dp" />
                    <ImageButton
                        android:id="@+id/tim_kiem"
                        android:src="@drawable/abc"
                        android:background="#FFFFFF"
                        android:layout_width="90dp"
                        android:layout_height="45dp" />

                </LinearLayout>
                <TextView
                    android:id="@+id/chi_tiet_text"
                    android:layout_marginTop="50dp"
                    android:text="[Chi tiết địa điểm]"
                    android:background="#FFFFFF"
                    android:textColor="#000000"
                    android:layout_width="match_parent"
                    android:layout_height="150dp" />
            </FrameLayout>
            <TextView
                android:id="@+id/kho_dia_diem"
                android:layout_width="match_parent"
                android:gravity="center"
                android:textSize="17dp"
                android:layout_height="47dp"
                android:background="#23AFEB"
                android:textColor="#FFFFFF"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="0dp"
                android:text="Thử thách"

                android:textAlignment="center" />
            <FrameLayout
                android:background="@drawable/thuthach_suoitien"
                android:layout_width="match_parent"
                android:layout_height="200dp">

                <LinearLayout
                    android:layout_marginTop="0dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="50dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="0dp"
                        android:gravity="center"
                        android:text="PLAY GAME"
                        android:textAlignment="center"
                        android:textColor="#FFFFFF"
                        android:textSize="15dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginTop="50dp"
                    android:orientation="vertical">


                </LinearLayout>



            </FrameLayout>

            <TextView

                android:layout_width="match_parent"
                android:gravity="center"
                android:textSize="17dp"
                android:layout_height="47dp"
                android:background="#23AFEB"
                android:textColor="#FFFFFF"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="0dp"
                android:text="Phần thưởng"

                android:textAlignment="center" />

            <FrameLayout
                android:background="@drawable/phanthuong"
                android:layout_width="match_parent"
                android:layout_height="200dp">

                <LinearLayout
                    android:layout_marginTop="0dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="50dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="0dp"
                        android:gravity="center"
                        android:text="COUPON"
                        android:textAlignment="center"
                        android:textColor="#FFFFFF"
                        android:textSize="15dp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="80dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="50dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="0dp"
                        android:gravity="center"
                        android:text="- [Nội dung phần thưởng] -"
                        android:textAlignment="center"
                        android:textColor="#FFFFFF"
                        android:textSize="15dp" />

                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="150dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="50dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="0dp"
                        android:gravity="center"
                        android:text="    Hạn sử dụng: [    ]"
                        android:textAlignment="textStart"                        android:textColor="#FFFFFF"
                        android:textSize="15dp" />

                </LinearLayout>
            </FrameLayout>
        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>